# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (default in development):
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# For PostgreSQL (production):
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=agentxsuite
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# SecretStore Configuration
# Leave empty to auto-generate a key (development only)
# For production, generate a key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRETSTORE_FERNET_KEY=

# SecretStore Backend (usually not needed to change)
SECRETSTORE_BACKEND=libs.secretstore.fernet.FernetSecretStore

# CORS Configuration (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
