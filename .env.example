# =============================================================================
# AgentxSuite Environment Variables Template
# =============================================================================
# 
# Kopiere diese Datei zu .env und passe die Werte für deine Umgebung an:
#   cp .env.example .env
#
# WICHTIG: Füge .env zu .gitignore hinzu und committe niemals echte Secrets!
# =============================================================================

# =============================================================================
# Django / Backend Settings
# =============================================================================

# Django Secret Key (MUSS in Production geändert werden!)
# Generiere einen sicheren Key mit: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-in-production

# Debug Mode (nur für Development, in Production immer False!)
DEBUG=True

# Erlaubte Hosts (komma-separiert)
# In Production: Ihre Domain(s), z.B. "agentxsuite.com,www.agentxsuite.com"
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Django Settings Module (normalerweise nicht ändern)
DJANGO_SETTINGS_MODULE=config.settings.dev

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

# Database Engine (normalerweise nicht ändern)
DATABASE_ENGINE=django.db.backends.postgresql

# Database Name
DATABASE_NAME=agentxsuite

# Database User
DATABASE_USER=postgres

# Database Password (MUSS in Production geändert werden!)
DATABASE_PASSWORD=postgres

# Database Host (für Docker: "db", für lokale Entwicklung: "localhost")
DATABASE_HOST=db

# Database Port
DATABASE_PORT=5432

# PostgreSQL Container Settings (für docker-compose)
POSTGRES_DB=agentxsuite
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# =============================================================================
# Redis / Cache
# =============================================================================

# Redis URL (Format: redis://host:port/db)
# Für Docker: redis://redis:6379/0
# Für lokale Entwicklung: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# Redis Port (für docker-compose)
REDIS_PORT=6379

# =============================================================================
# CORS Configuration
# =============================================================================

# Erlaubte CORS Origins (komma-separiert)
# Frontend URLs, die auf das Backend zugreifen dürfen
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000

# =============================================================================
# SecretStore Configuration
# =============================================================================

# SecretStore Backend (normalerweise nicht ändern)
SECRETSTORE_BACKEND=libs.secretstore.fernet.FernetSecretStore

# Fernet Key für SecretStore (optional, wird automatisch generiert wenn leer)
# Generiere einen Key mit: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRETSTORE_FERNET_KEY=

# =============================================================================
# MCP Fabric Service
# =============================================================================

# MCP Fabric Base URL
# URL des MCP Fabric FastAPI-Services
MCP_FABRIC_BASE_URL=http://localhost:8090

# MCP Fabric CORS Origins (komma-separiert)
# Erlaubte Origins für MCP Fabric CORS
MCP_FABRIC_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://localhost:8090,http://127.0.0.1:8090

# MCP Fabric Port (für docker-compose)
MCP_FABRIC_PORT=8090

# =============================================================================
# OIDC / OAuth2 Configuration (Optional)
# =============================================================================

# OIDC Issuer URL (z.B. für Keycloak, Auth0, etc.)
# Wenn gesetzt, wird OIDC-Token-Validierung aktiviert
OIDC_ISSUER=

# OIDC Audience (Client ID)
OIDC_AUDIENCE=

# OIDC JWKS URI (wird automatisch aus ISSUER konstruiert, wenn leer)
OIDC_JWKS_URI=

# OIDC Token Signing Algorithms (komma-separiert)
OIDC_ALGORITHMS=RS256,ES256

# =============================================================================
# Frontend (Next.js)
# =============================================================================

# Backend API URL (muss mit NEXT_PUBLIC_ beginnen für Client-Side Zugriff)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# MCP Fabric Service URL (muss mit NEXT_PUBLIC_ beginnen)
NEXT_PUBLIC_MCP_FABRIC_URL=http://localhost:8090

# Node Environment
NODE_ENV=development

# =============================================================================
# Docker Ports
# =============================================================================

# Backend Port
BACKEND_PORT=8000

# Frontend Port
FRONTEND_PORT=3000

# =============================================================================
# Development / Testing
# =============================================================================

# Mock MCP Server URL (nur für lokale Entwicklung/Testing)
# Wird vom seed_local_agentsuite Management-Command verwendet
MOCK_MCP_SERVER_URL=http://127.0.0.1:8091/.well-known/mcp/

# =============================================================================
# Production Overrides
# =============================================================================
# 
# Für Production sollten folgende Variablen angepasst werden:
#
# - SECRET_KEY: Muss ein sicherer, zufälliger Wert sein
# - DEBUG: Muss False sein
# - ALLOWED_HOSTS: Muss Ihre Domain(s) enthalten
# - DATABASE_PASSWORD: Muss ein sicheres Passwort sein
# - POSTGRES_PASSWORD: Muss ein sicheres Passwort sein
# - SECRETSTORE_FERNET_KEY: Sollte gesetzt werden (nicht automatisch generiert)
# - CORS_ALLOWED_ORIGINS: Muss Ihre Frontend-Domain(s) enthalten
# - MCP_FABRIC_CORS_ORIGINS: Muss Ihre Frontend-Domain(s) enthalten
# - NEXT_PUBLIC_API_URL: Muss Ihre Production-Backend-URL sein
# - NEXT_PUBLIC_MCP_FABRIC_URL: Muss Ihre Production-MCP-Fabric-URL sein
#
# =============================================================================
