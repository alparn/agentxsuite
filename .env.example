# =============================================================================
# AgentxSuite Environment Variables Template
# =============================================================================
# 
# Copy this file to .env and adjust the values for your environment:
#   cp .env.example .env
#
# IMPORTANT: Add .env to .gitignore and never commit real secrets!
# =============================================================================

# =============================================================================
# Django / Backend Settings
# =============================================================================

# Django Secret Key (MUST be changed in production!)
# Generate a secure key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-in-production

# Debug Mode (only for development, always False in production!)
DEBUG=True

# Allowed Hosts (comma-separated)
# In production: Your domain(s), e.g. "agentxsuite.com,www.agentxsuite.com"
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Django Settings Module (usually don't change)
DJANGO_SETTINGS_MODULE=config.settings.dev

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

# Database Engine (usually don't change)
DATABASE_ENGINE=django.db.backends.postgresql

# Database Name
DATABASE_NAME=agentxsuite

# Database User
DATABASE_USER=postgres

# Database Password (MUST be changed in production!)
DATABASE_PASSWORD=postgres

# Database Host (for Docker: "db", for local development: "localhost")
DATABASE_HOST=db

# Database Port
DATABASE_PORT=5432

# PostgreSQL Container Settings (for docker-compose)
POSTGRES_DB=agentxsuite
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# =============================================================================
# Redis / Cache
# =============================================================================

# Redis URL (Format: redis://host:port/db)
# For Docker: redis://redis:6379/0
# For local development: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# Redis Port (for docker-compose)
REDIS_PORT=6379

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed CORS Origins (comma-separated)
# Frontend URLs that are allowed to access the backend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000

# =============================================================================
# SecretStore Configuration
# =============================================================================

# SecretStore Backend (usually don't change)
SECRETSTORE_BACKEND=libs.secretstore.fernet.FernetSecretStore

# Fernet Key for SecretStore (optional, auto-generated if empty)
# Generate a key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRETSTORE_FERNET_KEY=

# =============================================================================
# MCP Fabric Service
# =============================================================================

# MCP Fabric Base URL
# URL of the MCP Fabric FastAPI service
MCP_FABRIC_BASE_URL=http://localhost:8090

# MCP Fabric CORS Origins (comma-separated)
# Allowed origins for MCP Fabric CORS
MCP_FABRIC_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://localhost:8090,http://127.0.0.1:8090

# MCP Fabric Port (for docker-compose)
MCP_FABRIC_PORT=8090

# =============================================================================
# OIDC / OAuth2 Configuration (Optional)
# =============================================================================

# OIDC Issuer URL (e.g. for Keycloak, Auth0, etc.)
# If set, OIDC token validation will be enabled
OIDC_ISSUER=

# OIDC Audience (Client ID)
OIDC_AUDIENCE=

# OIDC JWKS URI (automatically constructed from ISSUER if empty)
OIDC_JWKS_URI=

# OIDC Token Signing Algorithms (comma-separated)
OIDC_ALGORITHMS=RS256,ES256

# =============================================================================
# Frontend (Next.js)
# =============================================================================

# Backend API URL (must start with NEXT_PUBLIC_ for client-side access)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# MCP Fabric Service URL (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_MCP_FABRIC_URL=http://localhost:8090

# Node Environment
NODE_ENV=development

# =============================================================================
# Docker Ports
# =============================================================================

# Backend Port
BACKEND_PORT=8000

# Frontend Port
FRONTEND_PORT=3000

# =============================================================================
# Development / Testing
# =============================================================================

# Mock MCP Server URL (only for local development/testing)
# Used by the seed_local_agentsuite management command
MOCK_MCP_SERVER_URL=http://127.0.0.1:8091/.well-known/mcp/

# =============================================================================
# Production Overrides
# =============================================================================
# 
# For production, the following variables should be adjusted:
#
# - SECRET_KEY: Must be a secure, random value
# - DEBUG: Must be False
# - ALLOWED_HOSTS: Must contain your domain(s)
# - DATABASE_PASSWORD: Must be a secure password
# - POSTGRES_PASSWORD: Must be a secure password
# - SECRETSTORE_FERNET_KEY: Should be set (not auto-generated)
# - CORS_ALLOWED_ORIGINS: Must contain your frontend domain(s)
# - MCP_FABRIC_CORS_ORIGINS: Must contain your frontend domain(s)
# - NEXT_PUBLIC_API_URL: Must be your production backend URL
# - NEXT_PUBLIC_MCP_FABRIC_URL: Must be your production MCP Fabric URL
#
# =============================================================================
